@model IEnumerable<OnlineExam.Models.Exams>

@{
    ViewData["Title"] = "Show Answer";
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer" />
    <style>
        * {
          padding: 0;
          margin: 0;
          box-sizing: content-box;
        }
        body {
          background: rgb(236, 235, 238);
          background: linear-gradient(
            90deg,
            rgba(236, 235, 238, 1) 0%,
            rgb(255, 255, 255) 0%,
            rgb(75, 63, 247) 50%
          );
        }
        .navbar span {
          color: rgb(9, 1, 125);
          font-weight: bolder;
          font-size: larger;
        }
        .navbar a {
          text-decoration: none;
          color: rgb(9, 1, 125);
        }
        h1{
          font-size: 200%;
          font-weight: bolder;
          text-align: center;
          margin-top: 15rem;
        }
        .btn {
        color: #000000;
        font-size: large;
        font-weight: bold;
        border-radius: 2rem;
        border-width: 5px;
        border-color: #ffffff;
        margin-left: 75rem;
        }
        .btn a {
        text-decoration: none;
        color: #000000;
        }
    </style>
    <title>Result</title>
  </head>
  <nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand">
        <img
          src="~/images/Qnb.png"
          alt="QNB"
          height="24"
          class="d-inline-block align-text-top" />
      </a>
      <span>USER</span>
      <a asp-action="index"><i class="fa-solid fa-right-from-bracket"></i></a>
    </div>
  </nav>
  <body>
  @foreach (var item in Model) {
      <div>
        <h1 class="Score"></h1>
      </div>
  }
      <div class="btn" >
        <a asp-action="LoginUser">Back To Main Page</a> 
        </div>
  </body>
</html>
<script>
    
    sum = sessionStorage.getItem("score")
    let showedScore  = document.querySelector(".Score")
    if(sum!=null){
    showedScore.textContent = "Your Score is " + sum + " :)";
    }
    else{
    showedScore.textContent = "You answered Wrong Questions, Try again :(";
    }

</script>
