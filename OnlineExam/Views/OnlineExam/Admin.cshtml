@{
    ViewData["Title"] = "Admin";
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer" />
      <link rel="stylesheet" href="admin.css" /> 
      <style>
        * {
          padding: 0;
          margin: 0;
          box-sizing: content-box;
        }
        body {
          background: rgb(236, 235, 238);
          background: linear-gradient(
            90deg,
            rgba(236, 235, 238, 1) 0%,
            rgba(239, 0, 255, 1) 50%,
            rgba(201, 0, 255, 1) 100%
          );
        }
        .navbar span {
          color: purple;
          font-weight: bolder;
          font-size: larger;
        }
        .navbar a {
          text-decoration: none;
          color: purple;
        }
        .btn {
          color: #000000;
          font-size: large;
          font-weight: bold;
          border-radius: 2rem;
          border-width: 5px;
          border-color: #ffffff;
        }
        .btn a {
          text-decoration: none;
          color: #000000;
        }
        .main {
          font-weight: bolder;
          font-size: xx-large;
          margin-left: 5rem;
          font-family: "Courier New", Courier, monospace;
        }
        .form {
          margin-left: 8rem;
        }
        .form label {
          font-weight: bold;
        }
      </style>
    <title>admin</title>
  </head>
  <nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand">
        <img
          src="~/images/Qnb.png"
          alt="QNB"
          height="24"
          class="d-inline-block align-text-top" />
      </a>
      <span>Admin</span>
      <a href="/index.html"><i class="fa-solid fa-right-from-bracket"></i></a>
    </div>
  </nav>
  <body>
    <div class="main">Q & A</div>
    <form class="form">
      <div>
        <label for="inputquestion" class="col-sm-2 mt-4 mb-1">Question</label>
        <div class="col-5">
          <input
            type="text"
            class="form-control"
            id="inputquestion"
            placeholder="What Is Your Question ?" />
        </div>
      </div>
      <div class="">
        <label for="answers" class="col-sm-2 col-form-label">Answers</label>
        <div class="col-4 mb-1">
          <input
            type="password"
            class="form-control"
            id="answers"
            placeholder="Answer 1" />
        </div>
        <div class="col-4 mb-1">
          <input
            type="password"
            class="form-control"
            id="answers"
            placeholder="Answer 2" />
        </div>
        <div class="col-4 mb-1">
          <input
            type="password"
            class="form-control"
            id="answers"
            placeholder="Answer 3" />
        </div>
        <div class="col-4 mb-1">
          <input
            type="password"
            class="form-control"
            id="answers"
            placeholder="Answer 4" />
        </div>
        <div class="col-4 mb-4">
          <input
            type="password"
            class="form-control"
            id="answers"
            placeholder="Answer 5" />
        </div>
      </div>
      <button type="submit" class="btn">Add Question</button>
    </form>
  </body>
</html>
