@model IEnumerable<OnlineExam.Models.Exams>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
    crossorigin="anonymous" />
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer" />
    <style>
        * {
        padding: 0;
        margin: 0;
        box-sizing: content-box;
        }
        body {
        background: rgb(236, 235, 238);
        background: linear-gradient(
            90deg,
            rgba(236, 235, 238, 1) 0%,
            rgba(239, 0, 255, 1) 50%,
            rgba(201, 0, 255, 1) 100%
        );
        }
        .navbar span {
        color: purple;
        font-weight: bolder;
        font-size: larger;
        }
        .navbar a {
        text-decoration: none;
        color: purple;
        }
        table{
            margin-top: 1.5rem;
            margin-left: 3rem;
        }
        .headline{
            width: fit-content;
            color: purple;
        }
        .question{
            width: 20rem;
            height: 3rem;
        }
        th{
            width: 10rem;
            text-align: center;
        }
        h1 {
        font-family: Georgia, "Times New Roman", Times, serif;
        font-weight: bolder;
        margin-left: 5rem;
        text-decoration: underline;
        }
        .btn {
        color: purple;
        font-size: large;
        font-weight: bold;
        border-radius: 2rem;
        border-width: 5px;
        border-color: #ffffff;
        margin: 2rem 0 0 2rem;
        }
        .button :hover{
            color: white;
        }
        .create :hover{
            color: purple;
        }
        a{
            text-decoration: none;
            color: purple;
        }
        .actual{
            border-color: purple;
            border-width: 2px;
        }
        .actual td{
            font-weight: bold;
            text-align: center;
        }
        table{
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
    <a class="navbar-brand">
        <img
        src="~/images/Qnb.png"
        alt="QNB"
        height="24"
        class="d-inline-block align-text-top" />
    </a>
    <span>Admin</span>
    <a asp-action="Logout"><i class="fa-solid fa-right-from-bracket"></i></a>
    </div>
</nav>
<h1>Questions</h1>
<div class="create">
    <a asp-action="Create" class="btn">Create New</a>
</div>
<table>
    <thead>
        <tr class="headline">
            <th class="question">
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="actual">
            <td> 
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer5)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td class="button">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>

    </body>
</table>
