@{
    ViewData["Title"] = "User";
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer" />
    <style>
        * {
          padding: 0;
          margin: 0;
          box-sizing: content-box;
        }
        body {
          background: rgb(236, 235, 238);
          background: linear-gradient(
            90deg,
            rgba(236, 235, 238, 1) 0%,
            rgb(255, 255, 255) 0%,
            rgb(75, 63, 247) 50%
          );
        }
        .navbar span {
          color: rgb(9, 1, 125);
          font-weight: bolder;
          font-size: larger;
        }
        .navbar a {
          text-decoration: none;
          color: rgb(9, 1, 125);
        }
        .col-3 {
          border-right: 5px solid black;
        }
        .col-3 .previousExams{
          color: #000000;
          font-size: large;
          margin-top: 2rem;
          text-decoration: underline;
        }
        .col-3 .previous{
          margin-top: 5rem;
          font-weight: bolder;
        }
        .col-8 {
          display: flex;
          justify-content: center;
          margin-top: 15rem;
        }
        .btn {
          color: #000000;
          font-size: large;
          font-weight: bold;
          border-radius: 2rem;
          border-width: 5px;
          border-color: #ffffff;
        }
        .btn a {
          text-decoration: none;
          color: #000000;
        }
    </style>
    <title>user</title>
  </head>
  <nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand">
        <img
          src="~/images/Qnb.png"
          alt="QNB"
          height="24"
          class="d-inline-block align-text-top" />
      </a>
      <span>USER</span>
      <a asp-action="index"><i class="fa-solid fa-right-from-bracket"></i></a>
    </div>
  </nav>
  <body>
    <div class="row m-0 p-0">
      <div class="col-3">
        <h1 class="previousExams">Previous Exam</h1>
        <p class="previous"></p>
      </div>
      <div class="col-8">
        <form>
        <button type="Submit" class="btn" asp-action="Generate">Generate Exams</button>
        </form>
      </div>
    </div>
  </body>
</html>

<script>

  let previousScore = sessionStorage.getItem("score")
  let scores  = document.querySelector(".previous")
  
  if(previousScore != null){
  scores.textContent = "Your Previous Score was " + previousScore;
  }
  else{
  scores.textContent = "No Scores To Shown";
  }

</script>
