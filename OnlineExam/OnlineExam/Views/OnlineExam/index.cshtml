
@{

  ViewData["Title"] = "mainIndex";

}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
  crossorigin="anonymous" />
  <link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
  integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="style.css" />
  <style>
    * {
    padding: 0;
    margin: 0;
    box-sizing: content-box;
    }
    body {
    background: rgb(236, 235, 238);
    background: linear-gradient(
    90deg,
    rgba(236, 235, 238, 1) 0%,
    rgba(239, 0, 255, 1) 50%,
    rgba(201, 0, 255, 1) 100%
    );
    }
    .main{
      display: flex;
      justify-content: space-around;
      align-items: center;
    }
    .admin{
      max-height: 5rem;
      max-width: 10rem;
      margin-top: 10rem;
    }
    .admin i{
      display: none;
    }
    .admin:hover i{
      display: inline-block;
    }
    h1 {
    font-family: Georgia, "Times New Roman", Times, serif;
    font-weight: bolder;
    color: rgb(138, 0, 115);
    margin: 10px 0 0 20px;
    text-decoration: underline
    }
    .form {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 12rem;
    }
    label {
    font-family: Georgia, "Times New Roman", Times, serif;
    font-weight: bolder;
    }
    .passwordVisible {
    position: relative;
    }
    .passwordVisible i {
    position: absolute;
    right: 0.1px;
    top: 32%;
    cursor: pointer;
    }
    .btn {
    color: #000000;
    font-size: large;
    font-weight: bold;
    border-radius: 2rem;
    border-width: 5px;
    border-color: #ffffff;
    }
    .btn a {
    text-decoration: none;
    color: #000000;
    }
  </style>
  <script type="module" src="script.js" defer></script>
  <title>Online Examination WebApp</title>
</head>
<body>
  <h1>QNB Online Examination WebApp</h1>

  @* this is used if we are going to make it through form submission to be added in tag form
  action="/OnlineExam/Login" method="post" *@
  <div class="main">
  <form class="form">
      <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input
          type="email"
          placeholder="johndoe@QnbAlAhli.Com"
          class="form-control username"
          id="exampleInputEmail1"
          aria-describedby="emailHelp" 
          required/> 
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <div class="passwordVisible">
          <input
            type="password"
            placeholder="Password"
            class="form-control password"
            id="exampleInputPassword1" 
            required />
          <i class="fa-solid fa-eye-slash"></i>
        </div>
      </div>
        <button  class="btn" asp-action="LoginUser">
        <a>Login As User</a> 
        </button>
    </form>
    <form>
    <button  class="btn admin"  asp-action="LoginAdmin">
        <a>Login As Admin </a><i class="fa-solid fa-user-secret"></i> 
        </button>
    </form>
  </div>
        </body>
    <script>

      const $password = document.querySelector(".password");
      const $toggler = document.querySelector("i");

      const showHidePassword = () => {
        if ($password.type == "password") {
          $password.setAttribute("type", "text");
        } else {
          $password.setAttribute("type", "password");
        }
      };
      $toggler.addEventListener("click", showHidePassword);

    </script>
  
</html>
